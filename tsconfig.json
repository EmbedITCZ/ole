{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "outDir": "ts-out",
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es2015",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "sourceMap": true
  },
  "include": [
    "src",
    // @TODO this doesn't exist -> fill bug on stencil
    "types/jsx.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
